<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Employee Details Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_light"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Details"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Employee Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/empDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12dp"
                android:padding="16dp"
                android:text="Loading employee details..."
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Login/Logout Reports Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_light"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login/Logout Reports"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- No Login/Logout Reports TextView -->
        <TextView
            android:id="@+id/noLoginReportsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="No login/logout reports"
            android:textColor="#1976D2"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Login/Logout Reports RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/loginReportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginTop="8dp"
            android:maxHeight="300dp"
            android:nestedScrollingEnabled="false" />

        <!-- Out-of-Range Reports Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_light"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out-of-Range Reports"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- No Out-of-Range Reports TextView -->
        <TextView
            android:id="@+id/noReportsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="No reports"
            android:textColor="#D32F2F"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Out-of-Range Reports RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginTop="8dp"
            android:maxHeight="300dp"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>